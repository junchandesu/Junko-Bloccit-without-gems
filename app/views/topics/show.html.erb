<h1><%= link_to "Edit Topoic", edit_topic_path, class: "btn btn-info" %>
	<%= link_to "Delete topic", @topic, method: :delete, class: 'btn btn-warning', data:{ confirm: "Are you sure that you want to delete Topic?"} %></h1>

<div class="row">
	<div class="col-md-8">
		<h2><%= @topic.name %></h2>
		<p class="lead"><%= @topic.description %></p>
		<% @topic.posts.each do |post| %>
			<div class="media">
			  <div class="media-body">	
				<h4 class="media-heading">
					<%= link_to post.title, topic_post_path(@topic, post) %>
				</h4>
				<small>
					submitted <%= time_ago_in_words(post.created_at) %> ago and created by <%= current_user.name %><br>
					<%= post.comments.count %> comments
				</small>
			  </div>
			</div>
		<% end %>
	</div>
	<div class="col-md-4">
		<%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-warning' %>

	</div>
</div>