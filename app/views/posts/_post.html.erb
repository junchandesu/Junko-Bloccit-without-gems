<div class="media">
  <div class="media-body">	
	<h4 class="media-heading">
		<%= link_to post.title, topic_post_path(@topic, post) %>
	</h4>
	<small>
		submitted <%= time_ago_in_words(post.created_at) %> ago and created by <%= post.user.name %><br>
		<%= post.comments.count %> comments
	</small>
  </div>
</div>
	