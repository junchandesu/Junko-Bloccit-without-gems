
<% if current_user %>
 <div class="vote-arrows pull-left">
	<div><%= link_to " ", post_up_vote_path(post), class: 'glyphicon glyphicon-chevron-up', method: :post %></div>   <!-- pound sign in quotes — '#' or "#" — is the conventional path for a pending or stubbed link. -->
	<div><strong><%= post.points %></strong></div>
	<div><%= link_to " ", post_down_vote_path(post), class: 'glyphicon glyphicon-chevron-down', method: :post %></div>
 </div>
<% end %>